<article class='card animate__animated animate__fadeInUp' style="width: 18rem">
   <img src='{{#with flags}}{{png}}{{/with}}' alt='{{name.official}}' class='card-img' />
  <div class='card-body'>
    <h2 class='card-title'>{{name.official}}</h2>
    <ul class='list-group list-group-flush'>
      <li class='list-group-item'>Population: {{population}}</li>
      <li class='list-group-item'>Languages: 
      {{#each languages}}
        {{#if @last}}
          <span>{{this}}</span>
        {{else}}
          <span>{{this}},</span>
        {{/if}}
      {{/each}}</li>
      <li class='list-group-item'>Capital: {{capital}}</li>
    </ul>
  </div>


